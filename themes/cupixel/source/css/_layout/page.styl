article
  // box-sizing border-box
  padding 20px
  max-width 1000px
  margin auto
  white-space pre-wrap
  word-wrap break-word
  a
    color #03A9F4
    &:hover
      color #4FC3F7
  img
    max-width 100%
    max-height 120vh
    margin auto
    display block
  .img-caption
    margin-top 8px
    text-align center
    color #ccc